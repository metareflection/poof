#| Different variant of prototypes, wherein self is lazy.
(define (fix^ p t) (define s (p (delay s) t)) s)
(define (((slot^ k v^) s^ t) m) (if (eq? m k) (force v) (t k)))
(define (((slotGen^ k f) s^ t) m) (if (eq? m k) (f s^ (delay (t k))) (t k)))
